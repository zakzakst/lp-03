<header>
  <nav class="header__navbar navbar is-transparent is-fixed-top" id="js-header__navbar" role="navigation" aria-label="ヘッダーナビゲーション">
    <div class="container">
      <div class="navbar-brand">
        <!-- ロゴ画像 -->
        <a class="navbar-item" href="/">
          <img src="img/common/logo.png">
        </a>
        <!-- ハンバーガーメニュー（スマホ時のみ） -->
        <a role="button" class="navbar-burger" id="js-header__navbar-button">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <!-- メニュー -->
      <div class="navbar-menu" id="js-header__navbar-menu">
        <div class="navbar-end">
        <% for(let i = 0; i < commonData.navList.length; i++) { -%>
          <% let navItem = commonData.navList[i]; -%>
          <% if(navItem.name === pageData.currentNav) { %>
          <a class="navbar-item is-active" href="<%= navItem.path %>"><%= navItem.name %></a>
          <% } else { %>
          <a class="navbar-item" href="<%= navItem.path %>"><%= navItem.name %></a>
          <% } -%>
        <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>
